{
  "name": "@space48/cloud-seed",
  "version": "0.5.1",
  "description": "Cloud infrastructure automation tool that uses Terraform CDK.",
  "main": "dist/index.js",
  "bin": {
    "cloud-seed": "dist/bin/entrypoint.js"
  },
  "files": [
    "dist/**/*",
    "schemas"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/Space48/cloud-seed",
  "scripts": {
    "prebuild": "rimraf .gen && cdktf get",
    "prepublishOnly": "npm run build",
    "build": "rimraf dist && tsc",
    "lint": "eslint --fix './**/*.ts'",
    "lint:ci": "eslint './**/*.ts'",
    "test": "jest --passWithNoTests --coverage"
  },
  "engines": {
    "node": "14.x.x"
  },
  "author": "Ash Smith <ash@space48.com>",
  "license": "ISC",
  "dependencies": {
    "arg": "^5.0.1",
    "cdktf": "^0.9.0",
    "cdktf-cli": "^0.9.0",
    "constructs": "^10.0.25",
    "esbuild": "^0.14.8",
    "glob": "^7.2.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^14.17.27",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "ts-jest": "^27.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
